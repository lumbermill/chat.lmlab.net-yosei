<p id="notice"><%= notice %></p>

<h1>Listing Chats</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th>Timestamp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.user %></td>
        <td><%= chat.message %></td>
        <td><%= chat.created_at %></td>
        <td><%= link_to 'Show', chat %></td>
        <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
        <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chat', new_chat_path, class: "btn btn-primary" %>
